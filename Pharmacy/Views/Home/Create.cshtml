
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Покупка</title>
</head>
<body>
    <div>
        <h3>Форма оформления покупки</h3>
        <form action="" method="post">
            <input type="hidden" value="@ViewBag.PharId" name="idPhar"/>
            <table>
                <tr>
                    
                    <td><p>Введите Name </p></td>
                    <td><input type="text" name="Name" /> </td>
                </tr>
               
                <tr>
                    <td><p>Введите Weight :</p></td>
                    <td>
                        <input type="text" name="Weight" />
                    </td>
                </tr>

                <tr>
                    <td><p>Введите Quantity :</p></td>
                    <td>
                        <input type="text" name="Quantity" />
                    </td>
                </tr>

                <tr>
                    <td><p>Введите Description :</p></td>
                    <td>
                        <input type="text" name="Description" />
                    </td>
                </tr>

                <tr>
                    <td><p>Введите Price :</p></td>
                    <td>
                        <input type="text" name="Price" />
                    </td>
                </tr>

                <tr><td><input type="submit" value="Отправить" /> </td></tr>
            </table>
        </form>
    </div>
    <div>
        
    </div>
</body>
</html>